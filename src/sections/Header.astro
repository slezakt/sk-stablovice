---
import { menu, socials } from "../data/header";
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import logo from "../../public/images/logo.png";
---

<header>
  <div class="container">
    <a href="">
      <Image src={logo} alt="logo" width="100" height="100" />
    </a>
    <nav>
      <ul>
        {
          menu.map((item) => (
            <li>
              <a href={item.url}>{item.title}</a>
              {item.submenu && (
                <ul class="submenu-1">
                  {item.submenu.map((item) => (
                    <li>
                      <a href={item.url}>{item.title}</a>
                      {item.submenu2 && (
                        <ul class="submenu-2">
                          {item.submenu2.map((item) => (
                            <li>
                              <a href={item.url}>{item.title}</a>
                            </li>
                          ))}
                        </ul>
                      )}
                    </li>
                  ))}
                </ul>
              )}
            </li>
          ))
        }
      </ul>
      <button>
        <Icon name="search" />
        <span>Hledat</span>
      </button>
      <div>
        <span>Sledujte nás na sociálních sítích</span>
        <ul>
          {
            socials.map((item) => (
              <li>
                <a href={item.url}>
                  <Icon name={item.icon} />
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </nav>
  </div>
</header>
